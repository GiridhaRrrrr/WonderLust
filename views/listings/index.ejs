<% layout("/layouts/boilerplate")  %>
<style>
  #filters{
    /* margin-top: 1rem; */
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }
  .filters{
    text-align: center;
    margin-right: 1rem;
    margin-top: 2rem;
    opacity: 0.5;
  }
  .filters:hover{
    opacity: 1;
    cursor: pointer;
  }
  .filters p{
    font-size: 0.8rem;
  }
  .tax-info{
    display: none;
  }
  .tax-toggle{
    border:0.5px solid black;
    border-radius: 1rem;
    height: 2.5rem;
    padding: 0.5rem;
    margin-left: 4rem;
    display: flex;
    align-items: center;
    margin-top: 1rem;
  }
</style>

<body>
    <!-- <h1>All listing</h1> -->
    <!-- <form method="get" action="/listings/new"><button>create new</button></form> -->
    <div id="filters">
      <div class="filters">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
       <div class="filters">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
       <div class="filters">
        <div><i class="fa-solid fa-mountain-sun"></i></div>
        <p>Mountains</p>
      </div>
       <div class="filters">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic citiers</p>
      </div>
       <div class="filters">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castels</p>
      </div>
       <div class="filters">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amzing Pools</p>
      </div>
         <div class="filters">
        <div><i class="fa-solid fa-tent"></i></div>
        <p>Camping </p>
      </div>
       <div class="filters">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </div>
       <div class="filters">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic </p>  
        </div>
        <div class="filters">
          <div><i class="fa-solid fa-hill-avalanche"></i></div>
          <p>Trecking </p>  
          </div>
        <div class=" tax-toggle" >
          <div class="form-check form-switch">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display after taxes</label>
          <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">          
          </div>
        </div>                 
    </div>
    
              <div class="row row-cols-lg-3 row-cols-md-2 row-cols-lg-1">
        <%for(let list of alldata){%>
            <a href="/listings/<%= list._id  %>" class="listing-link">
                <div class="card col listing-card " >
                    <img src="<%= list.img.url %>" class="card-img-top index-img" alt="Listing_img" style="height:20rem">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text">
                        <b><%= list.title %></b> <br>
                        &#8377;<%= list.price.toLocaleString("en-IN")  %>/ night
                        <i class="tax-info">&nbsp; &nbsp; $18% GST</i>
                      </p>
                    </div>
                </div>
            </a>
            
          <% } %> 
      </div>


    <!-- <ul>
        <%for(let list of alldata){%>
            <li><a href="http://localhost:8080/listings/<%=list._id%>"><%= list.title  %></a></li>
        <% } %>
       
    </ul> -->

    <script>
      let taxswitch=document.getElementById("flexSwitchCheckDefault");
      console.log(taxswitch);
      taxswitch.addEventListener("click",()=>{
        let taxinfo=document.getElementsByClassName("tax-info");
        for(info of taxinfo){
          if(info.style.display !="inline"){
            info.style.display="inline";
          }else{
            info.style.display="none";
          }
          
        }
      })

    </script>
</body>


