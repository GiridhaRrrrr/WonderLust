<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-6 offset-2"><br>
            <h1>login for Wonder-Lust</h1>
            <form action="/login" method="post" class="needs-validation" novalidate>

                <div class="mb-3">
                    <label for="username" class="form-label">username</label>
                    <input type="text" name="username" placeholder="Enter username" id="username" class="form-control" required>
                    <div class="invalid-feedback">Enter user Name!</div>        
                </div>
                             
                <div class="mb-3">
                    <label for="password" class="form-label">password</label>
                    <input type="password" name="password" placeholder="Enter password" id="password" class="form-control" required>
                    <div class="invalid-feedback">Give a Strong One!</div>        
                </div>

                <button class="btn btn-success" type="submit">login</button><br>

            </form>
        </div>
    </div>   
</body>